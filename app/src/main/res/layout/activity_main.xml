<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimension_16dp"
    android:paddingBottom="28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/ys_display_medium"
        android:paddingTop="14dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="@dimen/head_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/searchButton"
        style="@style/MainButtonStyle"
        android:text="@string/search"
        app:icon="@drawable/search_vector" />

    <Button
        android:id="@+id/mediaButton"
        style="@style/MainButtonStyle"
        android:layout_marginTop="@dimen/dimension_16dp"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:text="@string/media_library"
        app:icon="@drawable/library_vector" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/MainButtonStyle"
        android:text="@string/settings"
        app:icon="@drawable/setting_vector" />

</LinearLayout>