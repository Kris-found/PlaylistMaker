<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SettingsActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:textSize="@dimen/head_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="64dp"/>

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/arrow_back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/main_horizontal_padding"
        android:layout_marginTop="24dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            android:layout_gravity="start"
            android:paddingTop="@dimen/settings_lists_padding"
            android:paddingBottom="@dimen/settings_lists_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size"
            />


            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/settings_lists_padding"
                android:layout_marginEnd="6dp" />

       </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_app"
                android:layout_gravity="start"
                android:paddingTop="@dimen/settings_lists_padding"
                android:paddingBottom="@dimen/settings_lists_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_text_size"
                />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/settings_lists_padding"
                android:src="@drawable/share"
                android:layout_marginEnd="16dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/support"
                android:layout_gravity="start"
                android:paddingTop="@dimen/settings_lists_padding"
                android:paddingBottom="@dimen/settings_lists_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_text_size"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/settings_lists_padding"
                android:src="@drawable/support"
                android:layout_marginEnd="14dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_agreement"
                android:layout_gravity="start"
                android:paddingTop="@dimen/settings_lists_padding"
                android:paddingBottom="@dimen/settings_lists_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_text_size"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/arrow_forward" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
