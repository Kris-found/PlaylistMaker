<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundColor">@color/black_mirage</item>
        <item name="colorPrimary">@color/black_mirage</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black_mirage</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SearchBackground">
        <item name="android:background">@drawable/edit_text_radius</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="SearchBarEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/search</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/black_mirage</item>
        <item name="android:textColorHint">@color/black_mirage</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawableTint">@color/black_mirage</item>
    </style>

    <style name="SearchBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/black_mirage</item>
    </style>

    <style name="TextInSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/settings_lists_padding</item>
        <item name="android:paddingBottom">@dimen/settings_lists_padding</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">?attr/colorSecondaryVariant</item>
        <item name="trackTint">@color/blue_light</item>
    </style>

</resources>