<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_mirage</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="cornerRadius">@dimen/dimension_16dp</item>
        <item name="iconTint">@color/black_mirage</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dimension_8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextInSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/settings_lists_padding</item>
        <item name="android:paddingBottom">@dimen/settings_lists_padding</item>
        <item name="android:paddingHorizontal">@dimen/dimension_16dp</item>
        <item name="android:paddingVertical">@dimen/dimension_20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">?attr/colorSecondaryVariant</item>
        <item name="trackTint">@color/gray_light</item>
    </style>

    <style name="Header">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginStart">@dimen/dimension_16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

        <style name="HeaderArrowBack">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_gravity">center_vertical</item>
            <item name="android:layout_marginStart">@dimen/dimension_20dp</item>
            <item name="android:layout_marginTop">@dimen/dimension_20dp</item>
            <item name="android:layout_marginBottom">@dimen/dimension_20dp</item>
            <item name="android:src">@drawable/arrow_back</item>
            <item name="tint">?attr/colorPrimaryVariant</item>
        </style>

    <style name="SearchBackground">
        <item name="android:background">@drawable/edit_text_radius</item>
        <item name="android:backgroundTint">@color/marble</item>
    </style>

    <style name="SearchBarEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/marble</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/search</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/black_mirage</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawableTint">@color/aluminium</item>
    </style>

    <style name="SearchBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/aluminium</item>
    </style>

    <style name="PlaceholderActionButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BasePlaceholderText">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PlaceholderTextInSearch" parent="BasePlaceholderText">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="PlaceholderTextInLibrary" parent="BasePlaceholderText">
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TrackInfoTitleStyleInPlayer">
        <item name="android:layout_marginTop">@dimen/dimension_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimension_8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/aluminium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackInfoValueStyle" parent="TrackInfoTitleStyleInPlayer">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:gravity">end</item>
    </style>
    
    <style name="BottomNavigationMenu">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <style name="BottomNavText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>